---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "Album Photo - Galerie d'images",
	description = "Une galerie d'images moderne avec Astro et Cloudinary"
} = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<main class="min-h-screen">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
